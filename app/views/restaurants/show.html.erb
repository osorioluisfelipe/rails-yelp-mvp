<div class="container">
  <h1><%= @restaurant.name %></h1>
  <div class="card w-50">
    <p>Category: <%= @restaurant.category.capitalize %></p>
    <p>Address: <%= @restaurant.address %></p>
    <p>Phone: <%= @restaurant.phone_number %></p>
  </div>
  <div class="card w-50">
    <h3>Reviews</h3>
    <% @restaurant.reviews.each do |review| %>
    <div class="card-body">
      <div class="card-text">
        <p>-<%= review.content %></p>
      </div>
      <p><%= review.rating %> stars</p>
    </div>
  <% end %>
  </div>
  <br>
  <div>
    <p><%= link_to 'Back to list', restaurants_path, class: 'btn btn-primary w-25' %></p>
  </div>
  <div>
    <p><%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary w-25' %></p>
  </div>
</div>
