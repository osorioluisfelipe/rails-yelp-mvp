<div class="container">
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <h1>Restaurants</h1>
      <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn btn-primary" %>
    </div>
  </nav>
  <div class="display-block">
    <% @restaurants.each do |restaurant| %>
    <div class='card'>
      <div class="card-body">
        <h3 class='card-title'><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <p class='card-text'>Category: <%= restaurant.category.capitalize %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
